<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('sidebar') -%>
    <main>
      <h1><%= title %></h1>
        <% if (items.length) { %>
    <ul>
      <% items.forEach(item => { %>
        <li>
          <a href="<%= item.url %>"><%= item.name %></a>
          </li>
     <% }); %>
    </ul>
    <% } else { %>
      <p>There are no items!</p>
      <% } %>
            <hr />
      <p>
        <a href="<%= category.url%>/update">Rename category</a>
      </p>
      <p>
        <a href="<%= category.url%>/delete">Delete category</a>
      </p>
    </main>
  </body>
</html>
